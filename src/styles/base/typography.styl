// Lists

.is-ul, .is-ol
  margin-left 26px
  font-size 14px
  line-height 30px
  font-family SourceSansPro-Semibold
  color #354052

.is-ul
  list-style none

  li:before
    background-color rgba(53,64,82,0.50)
    content ''
    circle(6px)
    margin-right 14px

.is-ol
  counter-reset section
  list-style-type none

  li:before
    color #7F8FA4
    content counters(section, '-') '.'
    counter-increment section
    font-family SourceSansPro-Regular
    margin-right 14px

